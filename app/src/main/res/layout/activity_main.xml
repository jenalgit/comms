<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/progress_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/searching_channels"/>

        <ImageButton
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/record_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_record"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/permission_denied_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/permission_denied"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/connected_clients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connected_clients_placeholder"
        android:visibility="gone"/>

</LinearLayout>
